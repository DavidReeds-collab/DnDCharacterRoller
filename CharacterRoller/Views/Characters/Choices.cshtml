@model ChoiceViewModel
@{
    ViewData["Title"] = "Choices";
}

<h2>Choices</h2>

<div>

    <div class="col-md-4">
        <form asp-action="Choice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                @Html.Hidden("characterId", Model.Character.Id)

                @for (int IFeature = 0; IFeature < Model.Choices.Count; IFeature++)
                {
                    <H4>@Model.Choices.[IFeature].classFeature.Feature</H4>

                    @for (int IOptions = 0; IOptions < Model.Choices[IFeature].OptionsList.Count(); IOptions++)
                    {

                        <p>@Model.Choices[IFeature].OptionsList[IOptions].ToString()</p>
                        @Html.CheckBox($"Choices[{IFeature}][{IOptions}].Selected")
                        @Html.Hidden($"Choices[{IFeature}][{IOptions}].Name", Model.Choices[IFeature].OptionsList[IOptions].ToString())
                        @Html.Hidden($"Choices[{IFeature}][{IOptions}].choiceId", Model.Choices[IFeature].Id.ToString())


                    }
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>