@model CharacterRoller.Models.Character


@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Character</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Level" class="control-label"></label>
                <input asp-for="Level" class="form-control" />
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="characterRaceId" class="control-label"></label>
                @Html.DropDownListFor(m => m.characterRaceId, new SelectList(ViewBag.races, "Text", "Value"), "Please select race", new { @id = "characterRaceId" })
                <span asp-validation-for="characterRaceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="characterClassId" class="control-label"></label>
                @Html.DropDownListFor(m => m.characterClassId, new SelectList(ViewBag.classes, "Text", "Value"), "Please select class", new { @id = "characterRaceId" })
                <span asp-validation-for="characterClassId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
