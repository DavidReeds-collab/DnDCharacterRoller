@model IEnumerable<CharacterRoller.Models.Race>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                <P>Race</P>
            </th>
            <th>
                <p>Ability Score Improvements</p>
            </th>
            <th>
                <p>Features</p>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @if (item.StrenghtImprovement != 0)
                {
                    <p>strenght +@Html.DisplayFor(modelItem => item.StrenghtImprovement) </p>
                }
                @if (item.DexterityImprovement != 0)
                {
                    <p>Dexterity +@Html.DisplayFor(modelItem => item.DexterityImprovement)</p>
                }
                @if (item.ConstitutionImprovement != 0)
                {
                    <p>Constitution +@Html.DisplayFor(modelItem => item.ConstitutionImprovement)</p>
                }
                @if (item.WisdomImprovement != 0)
                {
                    <p>Wisdom +@Html.DisplayFor(modelItem => item.WisdomImprovement)</p>
                }
                @if (item.IntelligenceImprovement != 0)
                {
                    <p>Intelligence +@Html.DisplayFor(modelItem => item.IntelligenceImprovement)</p>
                }
                @if (item.CharismaImprovement != 0)
                {
                    <p>Charisma +@Html.DisplayFor(modelItem => item.CharismaImprovement)</p>
                }

            </td>
            <td>
                @foreach(var feature in item.raceFeatures)
                {
                    <b>@feature.raceFeatureId.Remove(0, item.Id.Length)</b>
                    @feature.Feature <br />
                }
            </td>
        </tr>
}
    </tbody>
</table>
